# Environment variables for the Python backend

# Environment (development, production)
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/jarvis_python

# Security
SECRET_KEY=your_secret_key_here

# LLM Configuration
# Uncomment the appropriate section based on your choice of LLM

# HuggingFace
MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
DEVICE=cpu  # or cuda if you have GPU

# OpenAI (if using OpenAI API)
# OPENAI_API_KEY=your_api_key_here
# OPENAI_MODEL=text-embedding-ada-002
